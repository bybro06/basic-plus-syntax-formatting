{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "basicplus",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.bp",
					"match": "\\b(if|endif|while|endwhile|for|endfor|function|endfunction|sub|endsub)\\b"  
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.bp",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bp",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.bp"
}
