{
	"name": "basic-plus-syntax-formatting",
	"displayName": "Basic Plus Syntax Formatting",
	"description": "Syntax Formatting for Basic Plus (Clev3r EV3)",
	"version": "1.7.0",
	"publisher": "bybro06",
	"engines": {
	  "vscode": "^1.94.0"
	},
	"main": "./extension.js",
	"activationEvents": [
	],
	"contributes": {
	  "commands": [
		{
		  "command": "extension.formatBP",
		  "title": "Format BP Code"
		}
	  ],
	  "languages": [
		{
		  "id": "bp",
		  "aliases": [
			"Basic Plus",
			"basicplus",
			"bp"
		  ],
		  "extensions": [
			".bp",
			".bpi",
			".bpm"
		  ],
		  "configuration": "./syntaxes/language-configuration.json"
		},
		{
		  "id": "xml",
		  "aliases": [
			"xml",
			"Extensible Markup Language"
		  ],
		  "extensions": [
			".xml"
		  ],
		  "configuration": "./syntaxes/language-configuration.json"
		}
	  ],
	  "grammars": [
		{
		  "language": "bp",
		  "scopeName": "source.bp",
		  "path": "./syntaxes/bp.tmLanguage.json"
		},
		{
		  "language": "xml",
		  "scopeName": "text.xml",
		  "path": "./syntaxes/xml.tmLanguage.json"
		}
	  ],
	  "themes": [
		{
		  "label": "Basic Plus Theme Dark",
		  "uiTheme": "vs-dark",
		  "path": "./themes/basic-plus-theme.json"
		},
		{
		  "label": "Basic Plus Theme Light",
		  "uiTheme": "vs",
		  "path": "./themes/basic-plus-theme-light.json"
		}
	  ],
	  "snippets": [
		{
		  "language": "bp",
		  "path": "./snippets/bp-snippets.json"
		}
	  ],
	  "iconThemes": [
		{
		  "id": "basic-plus-program-icon-theme",
		  "label": "Basic Plus Program Icon Theme",
		  "path": "./themes/icon-theme.json"
		}
	  ]
	}
  }
  